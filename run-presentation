#!/bin/bash

IFS=

logdir=~/log
mkdir -p "$logdir"

did_run=0
onexit() {
    if [ $did_run = 0 ]; then
	did_run=1
	daemonize --multilog "$logdir"/xscreensaver --start xscreensaver -no-splash
	daemonize --multilog "$logdir"/xwrits --start xwrits-mine
    fi
}

daemonize --stop xscreensaver -no-splash
daemonize --stop xwrits-mine

trap onexit EXIT INT

"$@"
