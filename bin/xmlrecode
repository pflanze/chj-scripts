# 	$tmp->xsysprint($outstr);
# 	$tmp->xclose;
# 	xrename($file,"$file~");
# 	$tmp->xrename($file);
	$doc->toFile($file.".tmp~"); #ps ja, croakt bei schreibfehler. (sogar doppelt warn und croak)
	xrename $file,"$file~";
	xrename $file.".tmp~",$file;
    }
    print STDERR "\n";
}
