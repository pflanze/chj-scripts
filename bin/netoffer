#!/bin/bash

set -eu

myname=`basename "$0"`

usage() {
    echo "usage: $myname [-z|-Z] files_to_offer"
    echo
    echo "  offer files, encrypted"
    echo "  -z  use gzip compression instead of lzop"
    echo "  -Z  don't use compression"
    echo
    echo "  Also see \`netreceive\`."
    echo
    exit 1
}

if [ $# -lt 1 ]; then
    usage
elif [[ $1 = "-h" || $1 = "--help" ]]; then
    usage
fi

zz="" # for netfetch
z="--lzop" # for tar
if [ "$1" = "-z" ]; then
    zz="$1 "
    z="-z "
    shift
elif [ "$1" = "-Z" ]; then
    zz="$1 "
    z=""
    shift
elif [ "$1" = "--" ]; then
    shift
fi

if [ ! "${PORT-}" ]; then
    PORT=$((14123 + UID))
fi


ip=`publicip -f`

passwdgen 32 | tee >(
{
echo "--Run:--"
echo "echo `cat` | netfetch $zz$ip $PORT"
} >&2
) | {
tar c ${z} --one-file-system --sparse -f - "$@" \
    | gpg -z0 -c --batch --force-mdc --passphrase-fd 9 \
    | netcat-serve-on-port "$PORT" 
} 9<&0 </dev/null
