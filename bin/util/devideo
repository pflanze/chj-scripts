#!/bin/bash

set -euo pipefail
IFS=

cmd='find "$@" -iname "*.exe" -o -iname "*.zip" -o -iname "*.m4v" -o -iname "*.wav" -o -iname "*.webm" -o -iname "*.ogv" -o -iname "*.mp4" -o -iname "*.mp3" -o -iname "*.flac" -o -iname "*.ogg" -o -iname "*.ogx" -o -iname "*.mpga" -o -iname "*.mov" -o -iname "*.gif" | filter-size +1MB |Â» mv-parents-to ~/Videos/'

usage () {
    echo "$0 dir(s)"
    echo
    echo "  Runs: $cmd"
    echo
    echo "  I.e. moves away all the video and audio files from"
    echo "  the given directory/directories and subdirectories."
    exit 1
}

if [ $# -eq 0 ]; then
    usage
fi

if [ "$1" = "-h" -o "$1" = "--help" ]; then
    usage
fi

eval "$cmd"
