use strict;

$0=~ /(.*?)([^\/]+)\z/s or die "?"; 
my ($mydir, $myname)=($1,$2); 
sub usage {
    print STDERR map{"$_\n"} @_ if @_;
    print "$myname file1 [file2 [...]]
  schnittmenge, cross, wie sagt man?
  diejenigen entries die in allen files vorkommen.
  zeilen werden newlinegestutzt und neu vernewlined.

  optionen:
  -s | --sort   sort output
  (Christian Jaeger <$email>)
";
exit @_ ? 1 : 0;
}

my @args;
my $DEBUG=0;
my $opt_s;
for (my $i=0; $i<=$#ARGV; $i++) {
    local $_=$ARGV[$i];
    if (/^--?h(elp)?$/) {
    	usage
    } elsif ($_ eq '--') {
    	push @args, @ARGV[$i+1..$#ARGV];
    	last;
    } elsif (/^--?d(ebug)?$/) {
	$DEBUG=1;
    } elsif (/^--?s(ort)?$/) {
	$opt_s=1;
#     } elsif (/^--?X(?:XXX(?:=(.*))?)?$/) {
#         if (defined $1) {
#             $XXX=$1
#         } else {
#             $XXX=$ARGV[++$i] or usage "missing argument for '$_' option";
#         }
    } elsif (/^-./) {
    	usage("Unknown option '$_'\n");
    } else {
    	push @args, $_
    }
}
usage unless @args>=1;

use Chj::xopen qw(xopen_read);

# my %entries; # key -> undef   dann während 2.fileanschau inc, danach drübergehen und alle removen die noch bei undef sind.
# # erstes mal ist es ausnahme (komicsh?), nicht da heisst nicht es is nich erlaubt sondern wir sind die ersten.

