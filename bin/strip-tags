#!/usr/bin/perl -w

# Fre MÃ¤r  5 12:59:34 MET 2004
(my $email='pflanze%gmx,ch')=~ tr/%,/@./;

use strict;

$0=~ /(.*?)([^\/]+)\z/s or die "?"; 
my ($mydir, $myname)=($1,$2); 
sub usage {
    print STDERR map{"$_\n"} @_ if @_;
    print "$myname [infile [outfile]]

  (Christian Jaeger <$email>)
";
exit @_ ? 1 : 0;
}

my @args;
my $DEBUG=0;
for (my $i=0; $i<=$#ARGV; $i++) {
    local $_=$ARGV[$i];
    if (/^--?h(elp)?$/) {
    	usage
    } elsif ($_ eq '--') {
    	push @args, @ARGV[$i+1..$#ARGV];
    	last;
    } elsif (/^--?d(ebug)?$/) {
	$DEBUG=1;
#     } elsif (/^--?X(?:XXX(?:=(.*))?)?$/) {
#         if (defined $1) {
#             $XXX=$1
#         } else {
#             $XXX=$ARGV[++$i] or usage "missing argument for '$_' option";
#         }
    } elsif (/^-./) {
    	usage("Unknown option '$_'\n");
    } else {
    	push @args, $_
    }
}
usage if @args>2;

my ($infile,$outfile)=@args;
use Chj::xopen qw(xopen_read xopen_write);

my ($in,$out);
if ($infile) {
    $in=xopen_read $infile;
} else {
    $in=bless *STDIN{IO},"Chj::IO::File";
}
if ($outfile) {
    $out=xopen_write $outfile;
} else {
    $out=bless *STDOUT{IO},"Chj::IO::File";
}


my $content= $in->xcontent; $in->xclose;
$content=~ s|<[?!/]?\w+[^>]*>||sg;
$out->xprint($content);

$out->xclose;
